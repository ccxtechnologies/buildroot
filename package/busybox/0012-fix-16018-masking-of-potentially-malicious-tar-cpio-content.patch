+/* Print msg to a file-descriptor, replacing any unprintable and terminal escape bytes with '?' if fd is a TTY */
+static ALWAYS_INLINE void bb_safe_dump_str(FILE* fd, const char* msg) {
+    int fdno = fileno(fd);
+    if (isatty(fdno)) {
+        msg = printable_string(msg);
+    }
